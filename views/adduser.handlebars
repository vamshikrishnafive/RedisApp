<div class="container-fluid">
    {{#if error}} <span>{{error}}</span>{{/if}}
    <form class="row g-3" method="POST" action="/user/add">
        <div class="col-md-6">
            <label for="first_name" class="form-label">First_name</label>
            <input type="text" class="form-control" name="first_name" placeholder="Vamshi">
        </div>
        <div class="col-md-6">
            <label for="last_name" class="form-label">Last_name</label>
            <input type="text" class="form-control" name="last_name" placeholder="Krishna">
        </div>
        <div class="col-md-2">
            <label for="id" class="form-label">ID</label>
            <input type="text" class="form-control" name="id" placeholder="User123">
        </div>
        <div class="col-md-2">
            <label for="phone" class="form-label">Phone</label>
            <input type="text" class="form-control" name="phone" placeholder="09123456789">
        </div>
        <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" placeholder="vamshikrishna@something.com">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>